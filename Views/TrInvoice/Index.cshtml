@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Invoice Form with Detail Section</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link href="~/css/styles.css" rel="stylesheet" type="text/css" />
    
</head>
<body>

    <div class="container">
        <!-- Invoice Form: Label -->
        <form class="form-inline" method="post" action="/YourController/ViewInvoice">
            <div class="form-group">
                <label for="invoiceNo">No Invoice</label>
                <input type="text" id="invoiceNo" name="invoiceNo" />
                <button type="submit">View</button>
            </div>
        </form>
        <!-- END Invoice Form: Label -->

        <!-- Invoice Detail -->
        <div class="custom-container-wrapper">
            <div class="real-border-label">Invoice Detail</div>
            <div class="custom-container">
                <div class="row">
                    
                    <div class="col-6">
                        <form>
                            <div class="form-group mb-3 d-flex align-items-center">
                                <label class="form-label-fixed" for="invoiceDate">Invoice Date</label>
                                <input type="date" id="invoiceDate" name="invoiceDate" class="form-control border-sky" />
                            </div>

                            <div class="form-group mb-3 d-flex align-items-start">
                                <label class="form-label-fixed mt-2" for="toDescription">To</label>
                                <textarea id="toDescription" name="toDescription" class="form-control border-sky" rows="3" style="resize: none;"></textarea>
                            </div>


                            <div class="form-group mb-3 d-flex align-items-center">
                                <label class="form-label-fixed" for="salesName">Sales Name</label>
                                <select id="salesName" name="salesName" class="form-control border-sky custom-select-sky">
                                    <option selected disabled>Select Sales</option>
                                    <option>John Doe</option>
                                    <option>Jane Smith</option>
                                </select>
                            </div>

                            <div class="form-group mb-3 d-flex align-items-center">
                                <label class="form-label-fixed" for="courier">Courir</label>
                                <select id="courier" name="courier" class="form-control border-sky custom-select-sky">
                                    <option selected disabled>Select Courier</option>
                                    <option>JNE</option>
                                    <option>SiCepat</option>
                                </select>
                            </div>
                        </form>

                    </div>


                    <div class="col-6">
                        <form>

                            <div class="form-group mb-3 d-flex align-items-start">
                                <label class="form-label-fixed mt-2" for="shipToDescription">Ship To</label>
                                <textarea id="shipToDescription" name="shipToDescription" class="form-control border-sky" rows="3" style="resize: none;"></textarea>
                            </div>


                            <div class="form-group mb-3 d-flex align-items-center">
                                <label class="form-label-fixed" for="paymentType">Payment Type</label>
                                <select id="paymentType" name="paymentType" class="form-control border-sky custom-select-sky">
                                    <option selected disabled>Select Sales</option>
                                    <option>Cash</option>
                                    <option>COD</option>
                                </select>
                            </div>

                        </form>
                    </div>
                </div>


            </div>
        </div>
        <!-- END Invoice Detail -->

        <!-- Table Section -->
        <div class="row mt-4">
            <div class="col-12 d-flex justify-content-center">
                <div style="width: 97%;"> 
                    <table class="table table-sm text-center" style="color: black; border-color: black;">
                        <thead>
                            <tr style="color: black;">
                                <th style="width: 40%; border: 1px solid black; font-weight: normal;">Item</th>
                                <th style="width: 15%; border: 1px solid black; font-weight: normal;">Weight (Kg)</th>
                                <th style="width: 15%; border: 1px solid black; font-weight: normal;">QTY</th>
                                <th style="width: 15%; border: 1px solid black; font-weight: normal;">Unit Price</th>
                                <th style="width: 15%; border: 1px solid black; font-weight: normal;">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td style="border: 1px solid black;">Sample Product 1</td>
                                <td style="border: 1px solid black;">2.5</td>
                                <td style="border: 1px solid black;">3</td>
                                <td style="border: 1px solid black;">$10.00</td>
                                <td style="border: 1px solid black;">$30.00</td>
                            </tr>
                            <tr>
                                <td style="border: 1px solid black;">Sample Product 2</td>
                                <td style="border: 1px solid black;">1.0</td>
                                <td style="border: 1px solid black;">5</td>
                                <td style="border: 1px solid black;">$7.00</td>
                                <td style="border: 1px solid black;">$35.00</td>
                            </tr>
                            <!-- Total Section -->
                            <tr>
                                <td style="border: none;"></td>
                                <td style="border: none;"></td>
                                <td style="border: none;"></td>
                                <td style="text-align: left; font-weight: bold; border: none;">Subtotal</td>
                                <td style="text-align: right; font-weight: bold; border: none;">9999</td>
                            </tr>
                            <tr>
                                <td style="border: none;"></td>
                                <td style="border: none;"></td>
                                <td style="border: none;"></td>
                                <td style="text-align: left; font-weight: bold; border: none;">Courier Fee</td>
                                <td style="text-align: right; font-weight: bold; border: none;">9999</td>
                            </tr>
                            <tr>
                                <td style="border: none;"></td>
                                <td style="border: none;"></td>
                                <td style="border: none;"></td>
                                <td style="text-align: left; font-weight: bold; border: none;">Total</td>
                                <td style="text-align: right; font-weight: bold; border: none;">9999999</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- END Table Section -->

        <button type="submit">Save</button>








    </div>

</body>
</html>
